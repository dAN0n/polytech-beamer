					\usebeamerfont{title}\insertsubtitle\par%
				\fi
			\end{beamercolorbox}
		\end{textblock*} 
		\vfill
		\begin{textblock*}{11.2cm}(1.7cm,3cm)
			\begin{beamercolorbox}[wd=11.2cm,leftskip=2.6cm,sep=2pt,right,#1]{author}
